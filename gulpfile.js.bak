var elixir = require('laravel-elixir');

/*
 |--------------------------------------------------------------------------
 | Elixir Asset Management
 |--------------------------------------------------------------------------
 |
 | Elixir provides a clean, fluent API for defining some basic Gulp tasks
 | for your Laravel application. By default, we are compiling the Sass
 | file for our application, as well as publishing vendor resources.
 |
 */
elixir.config.sourcemaps = false;

elixir(function(mix) {

    /**
     * STYLESHEET
     */

    // Global mandatory styles
    mix.sass([
        'admin/plugins-global-style.scss'
    ], 'public/assets/admin/css/plugins-global-style.css');

    // Page level style
    mix.sass([
        '../admin/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css',
        '../admin/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css',
        '../admin/global/plugins/bootstrap-tagsinput/bootstrap-tagsinput.css',
        '../admin/global/plugins/bootstrap-editable/bootstrap-editable/css/bootstrap-editable.css',
        '../admin/global/plugins/colorbox/colorbox.css',
        '../admin/pages/css/profile.min.css'
    ], 'public/assets/admin/css/plugins-page-style.css');

    // Theme global style
    mix.sass([
        'admin/theme-global-style.scss'
    ], 'public/assets/admin/css/theme-global-style.css');

    // Theme layout style
    mix.sass([
        'admin/theme-layout-style.scss'
    ], 'public/assets/admin/css/theme-layout-style.css');

    /**
     * JAVASCRIPT
     */

    // Core Plugins
    mix.scripts([
        'jquery.min.js',
        'bootstrap/js/bootstrap.min.js',
        'js.cookie.min.js',
        'bootstrap-hover-dropdown/bootstrap-hover-dropdown.min.js',
        'jquery-slimscroll/jquery.slimscroll.min.js',
        'jquery.blockui.min.js',
        'uniform/jquery.uniform.min.js',
        'bootstrap-switch/js/bootstrap-switch.min.js',
    ], 'public/assets/admin/js/admin-core-plugins.js', 'resources/assets/admin/global/plugins');

    // Page level plugin
    mix.scripts([
        'bootstrap-fileinput/bootstrap-fileinput.js',
        'jquery-inputmask/jquery.inputmask.bundle.min.js',
        '../scripts/datatable.js',
        'datatables/datatables.min.js',
        'datatables/plugins/bootstrap/datatables.bootstrap.js',
        'bootstrap-confirmation/bootstrap-confirmation.min.js',
        'bootstrap-tagsinput/bootstrap-tagsinput.min.js',
        'bootbox/bootbox.min.js',
        'colorbox/jquery.colorbox-min.js',
        'bootstrap-editable/bootstrap-editable/js/bootstrap-editable.js',
    ], 'public/assets/admin/js/admin-page-plugins.js', 'resources/assets/admin/global/plugins');

    // Page level script
    mix.scripts([
        'admin-app.js',
        'form-input-mask.js',
        'table-datatables-managed.js',
        'ui-bootbox.js',
    ], 'public/assets/admin/js/admin-page-scripts.js', 'resources/assets/admin/js');

    // Theme global javascript
    mix.scripts([
        'app.js'
    ], 'public/assets/admin/js/admin-theme-global.js', 'resources/assets/admin/global/scripts');

    // Theme layout script
    mix.scripts([
        'layout/scripts/layout.js',
        'layout/scripts/demo.js',
        'global/scripts/quick-sidebar.min.js'
    ], 'public/assets/admin/js/admin-theme-layout.js', 'resources/assets/admin/layouts');
});
